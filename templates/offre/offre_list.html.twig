{% extends 'base.admin.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}

    <!-- section -->
    <section class="section section--last">
        <div class="container">
            <!-- content tabs -->
            <div class="tab-content">
                <div class="tab-pane fade show active" id="tab-1" role="tabpanel">
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive table-responsive--border">
                                <table class="profile__table">
                                    <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Price</th>
                                        <th>Created At</th>
                                        <th>Last Modification</th>
                                        <th>Description</th>
                                        <th>Action</th>
                                    </tr>
                                    </thead>

                                    <tbody>

                                    {% for offre in offres %}
                                        <tr>
                                            <td>{{ offre.title }}</td>
                                            <td>${{ offre.price }}</td>
                                            <td>{{ offre.createdAt|date("m/d/Y", "Europe/Paris") }}</td>
                                            <td>{{ offre.modifiedAt|date("m/d/Y", "Europe/Paris") }}</td>
                                            <td>{{ offre.description|slice(0, 50) }}</td>
                                            <td>
                                                <a href="{{ path('edit_offre', {'id': offre.id}) }}">
                                                    <button class="profile__logout" type="button">Edit</button>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- end content tabs -->
        </div>
    </section>
    <!-- end section -->

{% endblock %}
