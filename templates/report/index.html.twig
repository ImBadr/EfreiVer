{% extends 'base.admin.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}

    <!-- section -->
    <section class="section section--last">
        <div class="container">
            <!-- content tabs -->
            <div class="tab-content">
                <div class="tab-pane fade show active" id="tab-1" role="tabpanel">
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive table-responsive--border">
                                <table class="profile__table">
                                    <thead>
                                    <tr>
                                        <th>Reason</th>
                                        <th>Annonce</th>
                                        <th>Annonce Author</th>
                                    </tr>
                                    </thead>

                                    <tbody>
                                    {% for report in reports %}
                                        <tr>
                                            <td>{{ report.reason|capitalize }}</td>
                                            <td>{{ report.annonce.title }}</td>
                                            <td>{{ report.annonce.user.username|capitalize }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- end content tabs -->
        </div>
    </section>
    <!-- end section -->

{% endblock %}
